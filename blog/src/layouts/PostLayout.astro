---
import BaseLayout from './BaseLayout.astro';
import TagBadge from '@components/TagBadge.astro';
import { formatDate } from '@utils/date';
import type { Post } from '@utils/posts';

interface Props {
  title: string;
  date: Date;
  description?: string;
  category: string;
  tags: string[];
  source?: string;
  lang?: string;
  prev: Post | null;
  next: Post | null;
}

const { title, date, description, category, tags, source, lang, prev, next } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<BaseLayout
  title={title}
  description={description}
  type="article"
  publishedDate={date}
  tags={tags}
>
  <article class="post">
    <header class="post-header">
      <div class="post-meta">
        <time datetime={date.toISOString()}>{formatDate(date)}</time>
        <a href={`${base}${category}/`} class="category-link">{category}</a>
        {lang === 'en' && <span class="lang-badge">EN</span>}
      </div>
      <h1>{title}</h1>
      {description && <p class="post-description">{description}</p>}
      {source && (
        <p class="source-link">
          Source: <a href={source} target="_blank" rel="noopener">{new URL(source).hostname}</a>
        </p>
      )}
      {tags.length > 0 && (
        <div class="post-tags">
          {tags.map((tag) => (
            <TagBadge tag={tag} />
          ))}
        </div>
      )}
    </header>

    <div class="prose">
      <slot />
    </div>

    <nav class="post-nav">
      {prev && (
        <a href={`${base}${prev.collection}/${prev.slug}/`} class="nav-prev">
          <span class="nav-label">&larr; Previous in {prev.collection}</span>
          <span class="nav-title">{prev.data.title}</span>
        </a>
      )}
      {next && (
        <a href={`${base}${next.collection}/${next.slug}/`} class="nav-next">
          <span class="nav-label">Next in {next.collection} &rarr;</span>
          <span class="nav-title">{next.data.title}</span>
        </a>
      )}
    </nav>
  </article>
</BaseLayout>

<script is:inline type="module">
  const blocks = document.querySelectorAll('pre[data-language="mermaid"]');
  if (blocks.length > 0) {
    const { default: mermaid } = await import('https://cdn.jsdelivr.net/npm/mermaid@11/dist/mermaid.esm.min.mjs');
    mermaid.initialize({ startOnLoad: false, theme: 'default' });

    blocks.forEach((pre) => {
      const container = document.createElement('div');
      container.className = 'mermaid';
      container.textContent = pre.textContent || '';
      pre.replaceWith(container);
    });

    await mermaid.run({ nodes: document.querySelectorAll('.mermaid') });
  }
</script>

<style>
  .post-header {
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--color-border);
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 0.9rem;
    color: var(--color-text-muted);
    margin-bottom: 0.75rem;
  }

  .category-link {
    background: var(--color-bg-muted);
    padding: 0.15rem 0.5rem;
    border-radius: 4px;
    font-size: 0.85rem;
    color: var(--color-text-muted);
    text-decoration: none;
    text-transform: capitalize;
  }

  .category-link:hover {
    color: var(--color-primary);
  }

  .lang-badge {
    background: var(--color-primary);
    color: white;
    padding: 0.1rem 0.4rem;
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: 600;
  }

  h1 {
    font-size: 2rem;
    line-height: 1.3;
    margin: 0 0 0.75rem;
  }

  .post-description {
    font-size: 1.1rem;
    color: var(--color-text-muted);
    line-height: 1.6;
    margin: 0 0 0.75rem;
  }

  .source-link {
    font-size: 0.9rem;
    color: var(--color-text-muted);
    margin: 0 0 0.75rem;
  }

  .source-link a {
    color: var(--color-primary);
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
  }

  /* Prose styles for markdown content */
  .prose {
    line-height: 1.8;
    font-size: 1rem;
  }

  .prose :global(h2) {
    font-size: 1.5rem;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--color-border);
  }

  .prose :global(h3) {
    font-size: 1.25rem;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }

  .prose :global(h4) {
    font-size: 1.1rem;
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .prose :global(p) {
    margin: 0 0 1.25rem;
  }

  .prose :global(ul),
  .prose :global(ol) {
    margin: 0 0 1.25rem;
    padding-left: 1.5rem;
  }

  .prose :global(li) {
    margin-bottom: 0.4rem;
  }

  .prose :global(blockquote) {
    border-left: 3px solid var(--color-primary);
    margin: 1.5rem 0;
    padding: 0.75rem 1rem;
    background: var(--color-bg-muted);
    color: var(--color-text-muted);
  }

  .prose :global(blockquote p) {
    margin: 0;
  }

  .prose :global(code) {
    background: var(--color-bg-muted);
    padding: 0.15rem 0.35rem;
    border-radius: 3px;
    font-size: 0.9em;
  }

  .prose :global(pre) {
    margin: 1.5rem 0;
    padding: 1rem;
    border-radius: 8px;
    overflow-x: auto;
  }

  .prose :global(pre code) {
    background: none;
    padding: 0;
    border-radius: 0;
    font-size: 0.9rem;
  }

  .prose :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 1.5rem 0;
    font-size: 0.9rem;
  }

  .prose :global(th),
  .prose :global(td) {
    border: 1px solid var(--color-border);
    padding: 0.5rem 0.75rem;
    text-align: left;
  }

  .prose :global(th) {
    background: var(--color-bg-muted);
    font-weight: 600;
  }

  .prose :global(a) {
    color: var(--color-primary);
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .prose :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
  }

  .prose :global(hr) {
    border: none;
    border-top: 1px solid var(--color-border);
    margin: 2rem 0;
  }

  .prose :global(.astro-code) {
    border: 1px solid var(--color-border);
  }

  /* Post navigation */
  .post-nav {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
  }

  .nav-prev,
  .nav-next {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    padding: 1rem;
    border: 1px solid var(--color-border);
    border-radius: 8px;
    text-decoration: none;
    transition: border-color 0.2s;
  }

  .nav-prev:hover,
  .nav-next:hover {
    border-color: var(--color-primary);
  }

  .nav-next {
    text-align: right;
    grid-column: 2;
  }

  .nav-label {
    font-size: 0.8rem;
    color: var(--color-text-muted);
  }

  .nav-title {
    font-size: 0.95rem;
    color: var(--color-text);
    font-weight: 500;
  }

  @media (max-width: 640px) {
    h1 {
      font-size: 1.5rem;
    }

    .post-nav {
      grid-template-columns: 1fr;
    }

    .nav-next {
      grid-column: 1;
      text-align: left;
    }
  }
</style>
