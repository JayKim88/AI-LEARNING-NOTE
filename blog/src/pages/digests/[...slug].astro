---
import PostLayout from '@layouts/PostLayout.astro';
import { getAllPosts, getPostsByCategory, getAdjacentPosts, getReadingTime, getRelatedPosts } from '@utils/posts';

export async function getStaticPaths() {
  const posts = await getPostsByCategory('digests');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content, headings } = await post.render();
const readingTime = getReadingTime(post.body);

const [categoryPosts, allPosts] = await Promise.all([
  getPostsByCategory('digests'),
  getAllPosts(),
]);
const { prev, next } = getAdjacentPosts(categoryPosts, post.slug);
const relatedPosts = getRelatedPosts(post, allPosts, 3);
---

<PostLayout
  title={post.data.title}
  date={post.data.date}
  description={post.data.description}
  category="digests"
  tags={post.data.tags}
  source={post.data.source}
  lang={post.data.lang}
  prev={prev}
  next={next}
  readingTime={readingTime}
  headings={headings}
  relatedPosts={relatedPosts}
>
  <Content />
</PostLayout>
