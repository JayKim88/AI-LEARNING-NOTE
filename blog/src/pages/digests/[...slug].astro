---
import PostLayout from '@layouts/PostLayout.astro';
import { getPostsByCategory, getAdjacentPosts } from '@utils/posts';

export async function getStaticPaths() {
  const posts = await getPostsByCategory('digests');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

const categoryPosts = await getPostsByCategory('digests');
const { prev, next } = getAdjacentPosts(categoryPosts, post.slug);
---

<PostLayout
  title={post.data.title}
  date={post.data.date}
  description={post.data.description}
  category="digests"
  tags={post.data.tags}
  source={post.data.source}
  lang={post.data.lang}
  prev={prev}
  next={next}
>
  <Content />
</PostLayout>
