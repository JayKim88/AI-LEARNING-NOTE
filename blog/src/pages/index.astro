---
import BaseLayout from '@layouts/BaseLayout.astro';
import PostCard from '@components/PostCard.astro';
import { getAllPosts } from '@utils/posts';

const posts = await getAllPosts();
const digestCount = posts.filter((p) => p.collection === 'digests').length;
const learningCount = posts.filter((p) => p.collection === 'learnings').length;
---

<BaseLayout title="AI Learning Blog" description="AI 학습과 실험 기록">
  <section class="hero">
    <h1>AI Learning Blog</h1>
    <p>AI 학습과 실험 기록을 공유합니다.</p>
    <div class="stats">
      <span>{posts.length} posts</span>
      <span>{digestCount} digests</span>
      <span>{learningCount} learnings</span>
    </div>
  </section>

  <section class="posts">
    <h2>Latest Posts</h2>
    {posts.map((post) => (
      <PostCard
        title={post.data.title}
        date={post.data.date}
        description={post.data.description}
        category={post.collection}
        tags={post.data.tags}
        slug={post.slug}
        lang={post.data.lang}
      />
    ))}
  </section>
</BaseLayout>

<style>
  .hero {
    text-align: center;
    padding: 2rem 0 3rem;
    border-bottom: 1px solid var(--color-border);
    margin-bottom: 2rem;
  }

  .hero h1 {
    font-size: 2.5rem;
    margin: 0 0 0.5rem;
    background: linear-gradient(135deg, var(--color-primary), #8b5cf6);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero p {
    color: var(--color-text-muted);
    font-size: 1.1rem;
    margin: 0 0 1rem;
  }

  .stats {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    font-size: 0.9rem;
    color: var(--color-text-muted);
  }

  .posts h2 {
    font-size: 1.3rem;
    margin-bottom: 0.5rem;
  }

  @media (max-width: 640px) {
    .hero h1 {
      font-size: 1.8rem;
    }
  }
</style>
