---
import BaseLayout from '@layouts/BaseLayout.astro';
import { getAllLogs } from '@utils/posts';

export async function getStaticPaths() {
  const logs = await getAllLogs();
  return logs.map((log) => ({
    params: { slug: log.slug },
    props: { log },
  }));
}

const { log } = Astro.props;
const { Content } = await log.render();
const base = import.meta.env.BASE_URL;

function formatDate(date: Date): string {
  return date.toLocaleDateString('ko-KR', { year: 'numeric', month: 'long', day: 'numeric' });
}
---

<BaseLayout title={log.data.title} description={log.data.description}>
  <article class="log-post">
    <header class="post-header">
      <div class="post-meta">
        <a href={`${base}logs/`} class="back-link">‚Üê Logs</a>
        <time>{formatDate(log.data.date)}</time>
      </div>
      <h1>{log.data.title}</h1>
      {log.data.description && <p class="description">{log.data.description}</p>}
      {log.data.tags.length > 0 && (
        <div class="tags">
          {log.data.tags.map((tag) => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      )}
    </header>

    <div class="content">
      <Content />
    </div>
  </article>
</BaseLayout>

<style>
  .log-post {
    max-width: var(--content-width);
  }

  .post-header {
    padding-bottom: 1.5rem;
    margin-bottom: 2rem;
    border-bottom: 1px solid var(--color-border);
  }

  .post-meta {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 1rem;
    font-size: 0.85rem;
    color: var(--color-text-muted);
  }

  .back-link {
    color: var(--color-text-muted);
    text-decoration: none;
  }

  .back-link:hover {
    color: var(--color-primary);
  }

  h1 {
    font-size: 1.8rem;
    margin: 0 0 0.5rem;
  }

  .description {
    color: var(--color-text-muted);
    margin: 0 0 1rem;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
  }

  .tag {
    font-size: 0.8rem;
    background: var(--color-bg-muted);
    color: var(--color-text-muted);
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
  }

  .content :global(h2) {
    font-size: 1.3rem;
    margin: 2rem 0 0.75rem;
    padding-bottom: 0.3rem;
    border-bottom: 1px solid var(--color-border);
  }

  .content :global(h3) {
    font-size: 1.05rem;
    margin: 1.25rem 0 0.5rem;
    color: var(--color-text-muted);
  }

  .content :global(ul) {
    padding-left: 1.5rem;
    margin: 0.5rem 0;
  }

  .content :global(li) {
    margin: 0.25rem 0;
    line-height: 1.6;
  }

  .content :global(blockquote) {
    border-left: 3px solid var(--color-primary);
    margin: 0.75rem 0;
    padding: 0.5rem 1rem;
    background: var(--color-bg-muted);
    color: var(--color-text-muted);
    font-style: italic;
  }

  .content :global(hr) {
    border: none;
    border-top: 1px solid var(--color-border);
    margin: 2rem 0;
  }
</style>
