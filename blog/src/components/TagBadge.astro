---
interface Props {
  tag: string;
  count?: number;
}

const { tag, count } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<a href={`${base}tags/${tag}/`} class="tag-badge">
  #{tag}
  {count !== undefined && <span class="count">{count}</span>}
</a>

<style>
  .tag-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    padding: 0.2rem 0.6rem;
    background: var(--color-bg-muted);
    color: var(--color-text-muted);
    border-radius: 4px;
    font-size: 0.8rem;
    text-decoration: none;
    transition: all 0.2s;
  }

  .tag-badge:hover {
    background: var(--color-primary);
    color: white;
  }

  .count {
    font-size: 0.75rem;
    opacity: 0.7;
  }
</style>
