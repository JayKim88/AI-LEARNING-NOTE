---
const base = import.meta.env.BASE_URL;
const currentPath = Astro.url.pathname;

const navItems = [
  { label: 'Home', href: base },
  { label: 'Digests', href: `${base}digests/` },
  { label: 'Learnings', href: `${base}learnings/` },
  { label: 'Logs', href: `${base}logs/` },
  { label: 'Tags', href: `${base}tags/` },
  { label: 'Search', href: `${base}search/` },
];

function isActive(href: string): boolean {
  if (href === base) return currentPath === base;
  return currentPath.startsWith(href);
}
---

<header class="header" data-pagefind-ignore>
  <nav class="nav">
    <a href={base} class="site-title">AI Learning Blog</a>
    <div class="nav-right">
      <ul class="nav-links">
        {navItems.map((item) => (
          <li>
            <a
              href={item.href}
              class:list={['nav-link', { active: isActive(item.href) }]}
            >
              {item.label}
            </a>
          </li>
        ))}
      </ul>
      <button id="theme-toggle" class="theme-toggle" aria-label="Toggle dark mode" type="button">
        <span id="theme-icon"></span>
      </button>
    </div>
  </nav>
</header>

<script>
  const toggle = document.getElementById('theme-toggle')!;
  const icon = document.getElementById('theme-icon')!;
  const html = document.documentElement;

  function getTheme(): string {
    return html.getAttribute('data-theme') ||
      (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
  }

  function applyTheme(theme: string) {
    html.setAttribute('data-theme', theme);
    localStorage.setItem('theme', theme);
    icon.textContent = theme === 'dark' ? '‚òÄÔ∏è' : 'üåô';
  }

  toggle.addEventListener('click', () => {
    applyTheme(getTheme() === 'dark' ? 'light' : 'dark');
  });

  // Initialize icon on load
  icon.textContent = getTheme() === 'dark' ? '‚òÄÔ∏è' : 'üåô';
</script>

<style>
  .header {
    border-bottom: 1px solid var(--color-border);
    background: var(--color-bg);
    position: sticky;
    top: 0;
    z-index: 10;
  }

  .nav {
    max-width: var(--content-width);
    margin: 0 auto;
    padding: 1rem 1.5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .site-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-text);
    text-decoration: none;
  }

  .nav-right {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .nav-links {
    display: flex;
    gap: 1.5rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .nav-link {
    color: var(--color-text-muted);
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.2s;
  }

  .nav-link:hover,
  .nav-link.active {
    color: var(--color-primary);
  }

  .theme-toggle {
    background: none;
    border: 1px solid var(--color-border);
    border-radius: 6px;
    padding: 0.2rem 0.5rem;
    cursor: pointer;
    font-size: 1rem;
    line-height: 1.4;
    color: var(--color-text-muted);
    transition: border-color 0.2s, background 0.2s;
    display: flex;
    align-items: center;
    flex-shrink: 0;
  }

  .theme-toggle:hover {
    background: var(--color-bg-muted);
    border-color: var(--color-text-muted);
  }

  @media (max-width: 640px) {
    .nav {
      flex-direction: column;
      gap: 0.75rem;
    }

    .nav-links {
      gap: 1rem;
    }
  }
</style>
